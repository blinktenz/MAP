<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="418dp"
        android:layout_height="736dp"
        mapbox:mapbox_cameraTargetLat="42.172346"
        mapbox:mapbox_cameraTargetLng="2.475760"
        mapbox:mapbox_cameraZoom="12"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="0dp">

    </com.mapbox.mapboxsdk.maps.MapView>

    <ImageButton
            android:id="@+id/ubicacio"
            android:layout_width="66dp"
            android:layout_height="62dp"
            android:layout_marginBottom="40dp"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintHorizontal_bias="0.929"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:srcCompat="@android:drawable/ic_menu_mylocation" />


    <TextView
        android:id="@+id/pasos"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginBottom="50dp"
        android:background="#00413939"
        android:textSize="24sp"
        android:textStyle="bold"
        mapbox:fontFamily="sans-serif-black"
        mapbox:layout_constraintBottom_toBottomOf="@+id/mapView"
        mapbox:layout_constraintEnd_toEndOf="parent"
        mapbox:layout_constraintStart_toStartOf="parent" />

    <ImageButton
            android:id="@+id/camara"
            android:layout_width="74dp"
            android:layout_height="63dp"
            android:layout_marginBottom="40dp"
            mapbox:layout_constraintBottom_toBottomOf="parent"
            mapbox:layout_constraintEnd_toEndOf="parent"
            mapbox:layout_constraintHorizontal_bias="0.045"
            mapbox:layout_constraintStart_toStartOf="parent"
            mapbox:srcCompat="@android:drawable/ic_menu_camera" />


    </androidx.constraintlayout.widget.ConstraintLayout>